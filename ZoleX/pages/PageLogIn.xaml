<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:models="clr-namespace:Zole3.Models"
             xmlns:local="clr-namespace:Zole3"
             x:Class="Zole3.Pages.PageLogIn"
             x:DataType="models:LogInPageVM"
             Title="PageLogIn">

    
    <ContentPage.Content>
        <Grid>

            <StackLayout VerticalOptions="Center">

                <FlexLayout Wrap="Wrap" 
                            AlignItems="Center" 
                            JustifyContent="Center">

                    <StackLayout Margin="20,10,20,10">

                        <Label Text="Tavs vārds:" Margin="0"/>
                        <Entry WidthRequest="200" 
                                   Text="{Binding Name}"/>

                        <Label Text="Parole:" Margin="0,20,0,0"/>
                        <Entry WidthRequest="200"
                                   Text="{Binding Psw}"/>

                    </StackLayout>

                    <StackLayout WidthRequest="200"
                             MinimumWidthRequest="200"
                             Margin="20,10,20,10">

                        <Button Text="Ieiet" 
                                HorizontalOptions="Fill"
                                Command="{Binding LogInClickCommand}"
                                Margin="0,0,0,0">
                        </Button>

                        <Button Text="Ieiet kā viesis" 
                                Command="{Binding LogInAsGuestClickCommand}"
                                Margin="0,20,0,0">
                        </Button>

                        <Button Text="Reģistrēties" 
                                Command="{Binding RegisterClickCommand}"
                                Margin="0,20,0,0">
                        </Button>

                        <StackLayout Orientation="Horizontal" Margin="0,20,0,0">

                            <Button Text="Atcelt" 
                                    HorizontalOptions="FillAndExpand"
                                    Command="{Binding CancelClickCommand}"
                                    Margin="0,0,0,0">
                            </Button>

                            <Button Text="?" 
                                    HorizontalOptions="End"
                                    WidthRequest="50"
                                    Command="{Binding HelpClickCommand}"
                                    Margin="10,0,0,0">
                            </Button>


                        </StackLayout>

                    </StackLayout>

                </FlexLayout>
            </StackLayout>
        </Grid>

    </ContentPage.Content>
    
</ContentPage>