<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:models="clr-namespace:Zole3.Models"
             xmlns:local="clr-namespace:Zole3"
             x:Class="Zole3.Pages.PageSettings"
             x:DataType="models:SettingsPageVM"
             Title="PageSettings">

    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Text="Parametri:" 
                   TextDecorations="Underline" 
                   HorizontalOptions="Center"
                   TextColor="Moccasin"
                   Margin="10"/>

            <Grid Grid.Row="1"
                  HorizontalOptions="Center">

                <FlexLayout Wrap="Wrap"
                            AlignItems="Center" 
                            AlignContent="SpaceEvenly"
                            JustifyContent="SpaceEvenly">

                    <StackLayout Margin="0, 0, 0, 0" 
                                 HorizontalOptions="Start"
                                 WidthRequest="300">

                        <HorizontalStackLayout Margin="10">
                            <Switch IsToggled="{Binding ShowArrow}"/>
                            <Label Text="Rādīt pogu >>" VerticalOptions="Center"/>
                        </HorizontalStackLayout>

                        <StackLayout Orientation="Horizontal" Margin="10">
                            <Switch IsToggled="{Binding RememberPsw}"/>
                            <Label Text="Saglabāt servera paroli" VerticalOptions="Center"/>
                        </StackLayout>

                        <StackLayout Orientation="Horizontal" Margin="10">
                            <Switch IsToggled="{Binding HideOnlineGameButton}"/>
                            <Label Text="Nerādīt pogu Online spēle" VerticalOptions="Center"/>
                        </StackLayout>

                    </StackLayout>

                    <StackLayout Margin="0, 0, 0, 0">

                        <Label Text="Servera IP adrese:" Margin="0,10,0,0"/>
                        <Entry Text="{Binding ServerIp}" WidthRequest="200"/>
                        <Label Text="Servera ports:" Margin="0,10,0,0"/>
                        <Entry Text="{Binding ServerPort}" 
                               WidthRequest="80" 
                               HorizontalOptions="Start"/>

                    </StackLayout>

                </FlexLayout>

            </Grid>

            <Button Text="Ok" 
                    Command="{Binding OkClickCommand}"
                    WidthRequest="70"
                    Grid.Row="2"
                    Margin="20"
                    HorizontalOptions="Start">
            </Button>

        </Grid>
    </ContentPage.Content>
    



</ContentPage>