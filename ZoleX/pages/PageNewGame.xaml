<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:models="clr-namespace:Zole3.Models"
             xmlns:local="clr-namespace:Zole3"
             x:Class="Zole3.Pages.PageNewGame"
             x:DataType="models:NewGamePageVM"
             Title="PageNewGame">

    <ContentPage.Content>
        <StackLayout>
            <Label Text="Gaidam spēlētājus" HorizontalOptions="Center" Margin="20"/>

            <ListView x:Name="listView1" 
                          ItemsSource="{Binding Path=Players}">

                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:NewGamePlayerPageVM">
                        <ViewCell>
                            <Grid Padding="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Label 
		                            Grid.Column="0"
		                            Text ="{Binding Name}" 
		                            HorizontalOptions="Start" 
		                            VerticalOptions="Center" 
		                            TextColor="White"/>
                                <Label 
		                            Grid.Column="2"
		                            Text ="{Binding ExtraInfo}" 
		                            HorizontalOptions="Center" 
		                            VerticalOptions="Center" 
		                            TextColor="White"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>

            <Button Text="Atcelt" 
                    Command="{Binding BtCancelClickCommand}"
                    WidthRequest="150" 
                    Margin="10"
                    VerticalOptions="End" 
                    HorizontalOptions="Start">
            </Button>


        </StackLayout>
    </ContentPage.Content>
    

</ContentPage>