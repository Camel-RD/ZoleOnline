<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:models="clr-namespace:Zole3.Models"
             xmlns:local="clr-namespace:Zole3"
             x:Class="Zole3.Pages.PageStartUp"
             x:DataType="models:StartUpPageVM"
             Title="PageStartUp">


    <ContentPage.Content>
        <Grid>
            <StackLayout VerticalOptions="Center">

                <FlexLayout Wrap="Wrap" 
                            AlignItems="Center" 
                            JustifyContent="Center">

                    <StackLayout Margin="20">

                        <Label Text="Tavs vārds:" Margin="0"/>
                        <Entry WidthRequest="200" 
                                   Text="{Binding PlayerName}"/>

                    </StackLayout>

                    <StackLayout WidthRequest="200"
                             MinimumWidthRequest="200"
                             Margin="20">

                        <Button Text="Sākam spēli" 
                                Command="{Binding StartedCommand}"
                                Margin="0,0,0,0">
                        </Button>

                        <Button Text="Online spēle" 
                                Command="{Binding BtPlayOnlineClickCommand}"
                                Margin="0,20,0,0" 
                                IsVisible="{Binding Path=ShowOnlineGame}">
                        </Button>

                        <Button Text="Parametri" 
                                Command="{Binding BtSettingsClickedCommand}"
                                Margin="0,20,0,0">
                        </Button>

                    </StackLayout>

                </FlexLayout>
            </StackLayout>
        </Grid>
        
    </ContentPage.Content>

</ContentPage>